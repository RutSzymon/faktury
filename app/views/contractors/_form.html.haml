= render "sidebar"

.span9
  = simple_form_for @contractor, html: { class: "form-horizontal" } do |f|
    %fieldset
      %legend= "Szczegóły kontrahenta"
      = f.input :name, label: "Nazwa"
      = f.input :nip, label: "NIP"
      = f.input :person, label: "Przedstawiciel firmy przyjmujący fakturę"

    %fieldset
      %legend= "Dane kontaktowe"
      = f.input :phone, label: "Telefon"

      = f.fields_for :address do |builder|
        = render "shared/address_fields", f: builder

    .form-actions
      .pull-right
        = f.button :submit, value: "Zapisz", class: "btn-success"