= render "sidebar"

.span9
  = simple_form_for @product, html: { class: "form-horizontal" } do |f|
    %fieldset
      %legend= "Szczegóły produktu"
      = f.input :name, label: "Nazwa"
      = f.input :price, label: "Cena (zł)", input_html: { id: "price", type: :number, style: "height: 2em;", min: 0, step: 0.01 }
      = f.input :tax, label: "VAT (%)", collection: Product::TAX

    .form-actions
      .pull-right
        = f.button :submit, value: "Zapisz", class: "btn-success"